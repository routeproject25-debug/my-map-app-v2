{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TilesetsConfig",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["key", "url", "layer", "enabled"],
    "additionalProperties": false,
    "properties": {
      "key": { "type": "string", "pattern": "^[a-zA-Z0-9_-]{1,40}$" },
      "url": { "type": "string", "pattern": "^mapbox://.+$" },
      "layer": { "type": "string", "minLength": 1 },
      "hubs": { "type": "array", "items": { "type": "string", "minLength": 1 } },
      "enabled": { "type": "boolean" }
    }
  }
}
